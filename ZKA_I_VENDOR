@AccessControl.authorizationCheck: #NOT_REQUIRED
@EndUserText.label: 'INTERFACE VIEW ON ZKA_VENDOR_1'
@Metadata.ignorePropagatedAnnotations: true
define root view entity ZKA_I_VENDOR 
as select from zka_vendor_1
association to ZKA_COUNTRY_DOMAIN as _COUNTRY
on $projection.country = _COUNTRY.VALUE
composition[0..*] of ZKA_I_EKKO as _ekko

{
    key vendoruuid as VendorUuid,
    lifnr as Vendor,
    name as Vendor_name,
    land1 as country,
    ort01 as city,
    _COUNTRY,
    _ekko
   
}
